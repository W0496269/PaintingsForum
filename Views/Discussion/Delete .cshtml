 @model DiscussionForm.Models.Discussion

 <h1>Are you sure you want to delete this discussion?</h1>

 <div>
<h3>@Model.Title</h3>

<p>@Model.Content</p>
<form asp-action="DeleteConfirmed" method="post">
	
	<button type="submit" class="btn btn-danger">Delete</button>
	
	<a href="@Url.Action("Index", "Discussion")" class="btn btn-secondary">Cancel</a>
     </form>
 </div>
