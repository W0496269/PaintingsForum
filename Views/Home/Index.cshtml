@model List<DiscussionForm.Models.Discussion>

@{
    ViewData["Title"] = "Home";
}

<h1 class="mb-4">Latest Posts</h1>

@if (Model.Count == 0)
{
    <div class="alert alert-info text-center">No painting posts yet. Start one!</div>
}
else
{
    @foreach (var discussion in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="@Url.Action("GetDiscussion", "Home", new { id = discussion.DiscussionId })">
                        @discussion.Title
                    </a>
                </h5>
                <p class="card-text">@discussion.Content.Substring(0, 100)...</p>
                <p class="card-text"><small class="text-muted">Posted by @discussion.User.Name on @discussion.CreateDate.ToShortDateString()</small></p>
            </div>
            </div>
    }
}
